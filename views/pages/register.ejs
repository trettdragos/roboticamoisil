<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head.ejs %>
    <link href="/vendor/bootstrap-tagsinput/tagsinput.css" rel="stylesheet"/>
    <style>
        .error {
            color: red;
            border-color: red;
        }
    </style>
</head>

<body>
<% include ../partials/login-register-header.ejs %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h4 style="text-align: center; margin-bottom: 15px;"><b>Register</b></h4>
                    <form class="form-signin" id="form">
                        <div class="form-group">
                            <label for="email">Completand acest forular declari pe propria raspundere ca esti elev la CNI "Grigore Moisil" Brasov si ca toate datele completate sunt adevarate.</label>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="passwordCheck">Check Password</label>
                            <input type="password" id="passwordCheck" name="passwordCheck" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="fullName">Nume Complet</label>
                            <input type="text" id="fullName" name="fullName" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="clasa">Clasa (ex: 10D)</label>
                            <input type="text" id="clasa" name="clasa" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="telefon">Telefon</label>
                            <input type="text" id="telefon" name="telefon" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="motiv">Motiv inscriere</label>
                            <input type="text" id="motiv" name="motiv" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="skillsInput">Skills</label>
                            <input type="text" id="skillsInput" class="form-control" data-role="tagsinput">
                        </div>
                        <button class="btn btn-lg btn-block btn-register" type="button" id="submit">
                            Register<i class="fas fa-user"></i></button>
                    </form>
                    <div class="pt-1">
                        <small class="text-center text-muted">Already have an account?
                            <a href="/login" class="font-weight-bold link-unstyled">Log In</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<% include ../partials/footer.ejs %>
<script>
    let user = $.cookie('username');
    if (user) {
        $('#list').append('<li class="nav-item"><a class="nav-link" href="/anunturi">Anunturi <i class="fas fa-home"></i></a></li><li class="nav-item"><a class="nav-link" href="/orar">Orar <i class="fas fa-user"></i></a></li><li class="nav-item"><a class="nav-link" href="/documente">Documente <i class="fas fa-user"></i></a></li><li class="nav-item"><a class="nav-link" href="/forum">Forum <i class="fas fa-user"></i></a></li><li class="nav-item"><a class="nav-link" href="/profile">Profile <i class="fas fa-cogs"></i></a></li><li class="nav-item"><a class="nav-link" id="logout" href="/logout">Logout <i class="fas fa-sign-out-alt"></i></a></li>');
    } else {
        $('#list').append('<li class="nav-item"><a class="nav-link" href="/anunturi">Anunturi <i class="fas fa-home"></i></a></li><li class="nav-item"><a class="nav-link" id="logout" href="/register">Inregistrare <i class="fas fa-user-plus"></i></a></li><li class="nav-item"><a class="nav-link" id="logout" href="/login">Conectare <i class="fas fa-sign-in-alt"></i></a></li>');
    }
</script>
<script src="/vendor/bootstrap-tagsinput/tagsinput.js"></script>

<script>

    $("#submit").on('click', function () {
        console.log("registering");
        if (!registerValidator.form())
            return;
        console.log("seccond");
        let user = {
            email: document.getElementById("email").value,
            password: document.getElementById("password").value,
            name: document.getElementById('fullName').value,
            skills: $("#skillsInput").tagsinput('items'),
            about: document.getElementById('clasa').value+" "+document.getElementById('telefon').value+" "+document.getElementById("motiv").value
        }
        console.log(user);
        $.ajax({
            data: user,
            type: 'POST',
            url: 'http://localhost:3000/register/auth',
            success: function (res) {
                console.log(res.status);
                if (res.status == "successful") {
                    window.location.href = '/login';
                }
            }
        });
    });

    let registerValidator = $("#form").validate({
        rules: {
            email: {
                required: true,
                email: true
            },
            password: {
                required: true,
                regex: /^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#\$%\^&\*])(?=.{8,})/g
            },
            passwordCheck: {
                equalTo: '#password'
            },
            fullName: {
                required: true,
            }
        },
        messages: {
            email: {
                required: "Email is required",
                email: "Email must be a valid email"
            },
            password: {
                required: "Password is required",
                regex: "Password must contain <span title='A lowercase character, a uppercase character, a digit, a special symbol and at least 8 characters'><i class='far fa-question-circle'></i></span>"
            },
            passwordCheck: {
                equalTo: "Check Password must be the same as Password",
            },
            fullName: {
                required: "Full Name is required",
            }
        }
    });
</script>
</body>

</html>