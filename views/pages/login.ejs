<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head.ejs %>
</head>

<body>
<% include ../partials/login-register-header.ejs %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h4 style="text-align: center; margin-bottom: 15px;"><b>Login to Your Account</b></h4>
                    <form class="form-signin" id="form">
                        <p id="error" style="color: red;"></p>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" class="form-control" required>
                        </div>
                        <button class="btn btn-lg btn-block btn-signin" type="button" onclick="auth()" id="submit"> Login <i
                                    class="fas fa-sign-in-alt"></i></button>
                    </form>
                    <div class="row mt-2 text-center">
                        <div class="col-md-6 col-12">
                            <small class="text-center text-muted">Don't have an account? <a href="/register" class="font-weight-bold link-unstyled">Register</a></small>
                        </div>
                        <div class="col-md-6 col-12">
                            <small class="text-center text-muted"><a href="/reset-password" class="font-weight-bold link-unstyled">Reset password</a></small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<% include ../partials/footer.ejs %>
<script>
    let user = $.cookie('username');
    if (user) {
        $('#list').append('<li class="nav-item"><a class="nav-link" href="/anunturi">Anunturi <i class="fas fa-home"></i></a></li><li class="nav-item"><a class="nav-link" href="/orar">Orar <i class="fas fa-user"></i></a></li><li class="nav-item"><a class="nav-link" href="/documente">Documente <i class="fas fa-user"></i></a></li><li class="nav-item"><a class="nav-link" href="/forum">Forum <i class="fas fa-user"></i></a></li><li class="nav-item"><a class="nav-link" href="/profile">Profile <i class="fas fa-cogs"></i></a></li><li class="nav-item"><a class="nav-link" id="logout" href="/logout">Logout <i class="fas fa-sign-out-alt"></i></a></li>');
    } else {
        $('#list').append('<li class="nav-item"><a class="nav-link" href="/anunturi">Anunturi <i class="fas fa-home"></i></a></li><li class="nav-item"><a class="nav-link" id="logout" href="/register">Inregistrare <i class="fas fa-user-plus"></i></a></li><li class="nav-item"><a class="nav-link" id="logout" href="/login">Conectare <i class="fas fa-sign-in-alt"></i></a></li>');
    }
</script>
<script>

    let socket = io.connect();

    function auth() {
        $.ajax({
            data: {
                email: document.getElementById('email').value,
                password: document.getElementById('password').value
            },
            type: 'GET',
            url: '/login/auth',
            success: function (res) {
                console.log(res.status);
                if (res.status == "successful") {
                    $.cookie('username', res.email, {expires: 7, path: '/'});
                    $.cookie('uuid', res.uuid, {expires: 7, path: '/'});
                    $.cookie('token', res.token, {expires: 7, path: '/'});
                    $.cookie('notifications', JSON.stringify(res.notifications), {expires: 7, path: '/'});
                    $.cookie('newNotif', res.newNotif, {expires: 7, path: '/'});
                    window.location.href = '/profile';
                } else if (res.status == "account not verified") {
                    $('#error').empty().append('Account not verified. Please confirm your email');
                } else {
                    document.getElementById("email").style.borderColor = "red";
                    document.getElementById("password").style.borderColor = "red";
                    $('#error').empty().append('Email or Password incorect!');
                }
            }
        });
        //socket.emit('auth login', {email:document.getElementById('email').value, password:document.getElementById('password').value})
    }

    $("#form").keyup(function (event) {
        if (event.keyCode === 13) {
            $("#submit").click();
        }
    });
</script>
</body>

</html>